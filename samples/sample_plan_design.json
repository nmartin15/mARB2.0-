        "applies_after_deductible": true
      }
    }
  },
  "benefit_limits": {
    "annual": {
      "physical_therapy_visits": {
        "limit": 30,
        "requires_prior_auth_after": 20
      },
      "mental_health_visits": {
        "limit": 52,
        "requires_prior_auth_after": 20
      },
      "chiropractic_visits": {
        "limit": 20,
        "requires_prior_auth_after": 10
      }
    },
    "lifetime": {
      "organ_transplant": {
        "limit": 1000000.00,
        "currency": "USD"
      },
      "bariatric_surgery": {
        "limit": 50000.00,
        "currency": "USD"
      }
    }
  },
  "prior_authorization_requirements": {
    "always_required": [
      {
        "service_type": "surgery",
        "cpt_codes": ["10000-69999"],
        "description": "All surgical procedures"
      },
      {
        "service_type": "imaging",
        "cpt_codes": ["70000-79999"],
        "modalities": ["MRI", "CT", "PET"],
        "description": "Advanced imaging studies"
      },
      {
        "service_type": "specialty_drugs",
        "ndc_codes": ["specialty_tier"],
        "description": "Specialty pharmacy medications"
      }
    ],
    "required_after_visits": {
      "physical_therapy": {
        "visits": 20,
        "description": "PA required after 20 PT visits"
      },
      "mental_health": {
        "visits": 20,
        "description": "PA required after 20 mental health visits"
      }
    },
    "required_for_amounts": {
      "durable_medical_equipment": {
        "amount": 500.00,
        "description": "PA required for DME over $500"
      }
    }
  },
  "network_rules": {
    "in_network": {
      "discount_applied": true,
      "coinsurance_percentage": 20,
      "deductible_applies": true
    },
    "out_of_network": {
      "discount_applied": false,
      "coinsurance_percentage": 40,
      "deductible_applies": true,
      "balance_billing_allowed": true,
      "max_allowed_amount": "UCR"
    },
    "emergency_services": {
      "always_in_network": true,
      "description": "Emergency services treated as in-network regardless of provider"
    }
  },
  "coverage_rules": {
    "preventive_care": {
      "covered_at_100": true,
      "applies_to_deductible": false,
      "services": [
        "annual_physical",
        "mammography",
        "colonoscopy",
        "vaccinations",
        "well_woman_exam",
        "well_child_exam"
      ]
    },
    "maternity": {
      "covered": true,
      "copay": 0,
      "coinsurance": 0,
      "applies_to_deductible": false,
      "description": "Maternity services covered at 100%"
    },
    "mental_health": {
      "parity": true,
      "copay": 50,
      "coinsurance": 20,
      "description": "Mental health services with parity to medical benefits"
    },
    "substance_abuse": {
      "parity": true,
      "copay": 50,
      "coinsurance": 20,
      "description": "Substance abuse treatment with parity to medical benefits"
    }
  },
  "exclusions": [
    {
      "category": "cosmetic",
      "description": "Cosmetic procedures not medically necessary",
      "cpt_codes": ["11950-11954", "15730-15738"]
    },
    {
      "category": "experimental",
      "description": "Experimental or investigational treatments",
      "cpt_codes": ["unlisted_procedures"]
    },
    {
      "category": "weight_loss",
      "description": "Weight loss programs and medications (unless bariatric surgery approved)",
      "exceptions": ["bariatric_surgery_with_pa"]
    },
    {
      "category": "fertility",
      "description": "Fertility treatments and IVF",
      "exceptions": ["diagnostic_testing"]
    }
  ],
