    },
    "family": {
      "in_network": 3000.00,
      "out_of_network": 6000.00,
      "applies_to": ["medical", "pharmacy"]
    },
    "embedded": true,
    "carry_over": false
  },
  "out_of_pocket_maximums": {
    "individual": {
      "in_network": 5000.00,
