      "non_preferred_brand": {
        "in_network": 60.00,
        "out_of_network": 120.00
      },
      "specialty": {
        "in_network": 100.00,
        "out_of_network": 200.00
      }
    }
  },
  "coinsurance": {
    "medical": {
      "in_network": {
        "percentage": 20,
        "applies_after_deductible": true
