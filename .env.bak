# mARB 2.0 - Environment Variables Example
# Copy this file to .env and update the values for your environment
# IMPORTANT: Never commit .env to version control!

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
# For local development without password: postgresql://username@localhost:5432/marb_risk_engine
DATABASE_URL=postgresql://postgres@localhost:5432/marb_risk_engine
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
# Generate secure keys with: python generate_keys.py
# JWT_SECRET_KEY must be at least 32 characters
JWT_SECRET_KEY=CsyZp856Cogee-5xtTrmae0M_LdggJK8tLRPOxa3nr4
# ENCRYPTION_KEY must be exactly 32 characters
ENCRYPTION_KEY=IRGSFi5ESVGkqPekwvLvKNfHN8MIESX1
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7
BCRYPT_ROUNDS=12

# ============================================================================
# AUTHENTICATION & AUTHORIZATION
# ============================================================================
REQUIRE_AUTH=false
AUTH_EXEMPT_PATHS=/api/v1/health,/api/v1/docs,/api/v1/openapi.json,/

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
# For development: http://localhost:3000,http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ============================================================================
# CELERY CONFIGURATION
# ============================================================================
# Celery broker and result backend URLs
# Format: redis://:password@host:port/db
# For local Redis without password: redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=app.log
LOG_DIR=logs

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TTL_RISK_SCORE=3600
CACHE_TTL_CLAIM_DATA=1800
CACHE_TTL_PAYER_RULES=86400
